<div class="container">
	<h1>XYZ ulr-shortener</h1>

	<div class="jumbotron">
		<%= form_for(:link, url: create_path, remote: true) do |f| %>
			<%= f.text_field :url, class: "form-control", placeholder: "Enter url" %>
			<br>
			<%= f.submit "Submit", class: "btn btn-info" %>
		<% end %>
	</div>
	<%= will_paginate %>
	<table class="table">
		<th>
			<td>Original URL</td>
			<td>Created at</td>
			<td>Shortened URL</td>
			<td>Clicks</td>
		</th>
		<tbody id="tablebody">
			<%= render @links %>
		</tbody>
	</table>
	<%= will_paginate %>
</div>